{% extends "base.html.twig" %}

{% block title %}{{ parent() }} | article{% endblock %}

{% block body %}
<div class="row">
    <div class="col-12 text-center">
        <h1 class=" border-bottom border-white m-5 p-3">Ajout d'article</h1>
    </div>
</div>

<form action="" method="post" enctype="multipart/form-data">
    <div class="form-row">
        <div class="form-group col mb-3">
            <label for="title">Titre de l'article : </label>
            <input type="text" class="form-control" name="title" required>
        </div>

        <div class="form-group col mb-3">
            <label for="chapo">Ch√¢po : </label>
            <input type="text" class="form-control" name="chapo">
        </div>
    </div>

    <div class="row">
    <div class="form-group mb-3">
        <label for="content">Contenu : </label>
        <textarea class="form-control" name="content" id="content" cols="30" rows="10"></textarea>
    </div>

    <div class="form-group mb-3">
        <label for="image">Image : </label>
        <input type="file" class="form-control-file" name="image">
    </div>

    <div class="row no-guters mb-3">
        <input type="submit" value="Valider" class="btn btn-primary col">
    </div>
    </div>
</form>

{% endblock %}
