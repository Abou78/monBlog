{% extends "base.html.twig" %}

{% block title %}{{ parent() }} | home{% endblock %}

{% block body %}
<div class="row">
    <div class="col-12 text-center">
        <h1 class=" border-bottom border-white m-5 p-3">Développeur Web PHP/Symphony</h1>
    </div>
</div>
<div class="row">
    <div class="col-12 text-center">
        <img src="/Assets/images/photoAbou.jpg" alt="Ma photo" class="maPhoto rounded-circle">
        <p>Abou Diallo le développeur moderne qu'il vous faut</p>
    </div>
</div>

<div class="row">
    <div class="col-12 text-center">
        <h2 class="border-bottom border-white m-5 p-3">Mes informations personnelles</h2>
    </div>
</div>

<div class="row text-center">
    <div class="col-12 col-md-4 mb-3">
        <div>
            <img src="/Assets/images/contact/telephone.png" alt="Logo téléphone" width="50px">
        </div>
        <div class="m-2">
            <p>(fr) +33 6 65 03 64 71</p>
            <p>(en) +44 7 546 814 943</p>
        </div>
    </div>
    <div class="col-12 col-md-4 mb-3">
        <div>
            <img src="/Assets/images/contact/in.png" alt="Logo linkedin" width="50px">
        </div>
        <div class="m-2">
            <a href="https://www.linkedin.com/in/abou-diallo-896b9017a" target="_blank">Linkedin</a>
        </div>
    </div>
    <div class="col-12 col-md-4 mb-3">
        <div>
            <img src="/Assets/images/contact/Git.png" alt="Logo GitHub" width="50px">
        </div>
        <div class="m-2">
            <a href="https://github.com/Abou78" target="_blank">GitHub</a>
        </div>
    </div>
</div>

<div class="row monBouton">
    <div class="col-12 text-center m-3">
        <a class="btn btn-primary rounded-pill" href="/Assets/images/A.DIALLO CV.pdf" target="_blank">Téléchargez mon CV</a>
    </div>
</div>

<div class="row text-center">
    <div class="col-12">
        <h2 class="border-bottom border-white m-5 p-3">Formulaire de contact</h2>
    </div>
</div>

<div class="row text-center">
    <div class="col-12">
        <p>{{ success }}</p>

        <form name="contactForm" action="/" method="post">
            <div class="mb-3">
                <label for="lastname" class="form-label">Votre nom :</label>
                <input type="text" name="lastname" class="form-control" id="lastname" placeholder="Votre nom ?" autofocus="autofocus" required>
            </div>

            <div class="mb-3">
                <label for="firstname" class="form-label">Votre prenom :</label>
                <input type="text" name="firstname" class="form-control" id="firstname" placeholder="Votre prenom ?" required>
            </div>

            <div class="mb-3">
                <label for="email" class="form-label">Votre email :</label>
                <input type="email" name="email" class="form-control" id="email" placeholder="Votre email ?" required>
            </div>

            <div class="mb-3">
                <label for="message" class="form-label">Votre message :</label>
                <textarea name="message" id="message" cols="30" rows="10" class="form-control" required></textarea>
            </div>

            <div class="mb-3">
                <input type="submit" class="btn btn-primary" value="Soumettre" />
            </div>
        </form>
    </div>
</div>

{% endblock %}
