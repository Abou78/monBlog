{% extends "base.html.twig" %}

{% block title %}{{ parent() }} | inscription{% endblock %}

{% block body %}
    <div class="row">
        <div class="col-12 text-center">
            <h1 class=" border-bottom border-white m-5 p-3">Inscription</h1>
        </div>
    </div>

    {% if errorMessage is defined and errorMessage is not null %}
        {{ errorMessage }}
    {% endif %}

    <div class="row">
        <div class="col-6">
            <form name="UserForm" action="/registration" method="post">
                <div class="mb-3">
                    <label for="firstName" class="form-label">Votre prénom : </label>
                    <input type="text" class="form-control" name="firstName" id="firsName" placeholder="Votre prénom ?" autofocus required>
                </div>
            
                <div class="mb-3">
                    <label for="lastName" class="form-label">Votre nom : </label>
                    <input type="text" class="form-control" name="lastName" id="lastName" placeholder="Votre nom ?" required>
                </div>
            
                <div class="mb-3">
                    <label for="description">Description : </label>
                    <textarea class="form-control" name="description" id="description" cols="30" rows="3" placeholder="Votre description ?"></textarea>
                </div>
            
                <div class="mb-3">
                    <label for="email" class="form-label">Email : </label>
                    <input type="email" class="form-control" name="email" id="email" placeholder="Votre Email ?" required>
                </div>
            
                <div class="mb-3">
                    <label for="password" class="form-label">Mot de passe : </label>
                    <input type="password" class="form-control" name="password" id="password" placeholder="Votre mot de passe ?" required>
                </div>
            
                <div class="mb-3">
                    <label for="validPassword" class="form-label">Validation du mot de passe : </label>
                    <input type="password" class="form-control" name="validPassword" id="validPassword" placeholder="Validation de votre mot de passe ?" required>
                </div>
            
                <button type="submit" class="btn btn-primary">Valider</button>
            </form>
        </div>
    </div>
{% endblock %}