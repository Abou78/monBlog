{% extends "base.html.twig" %}

{% block title %}{{ parent() }} | article{% endblock %}

{% block body %}
    <div class="row">
        <div class="col-12 text-center">
            {% if error %}
                <div class="alert alert-danger" role="alert">l'article n'a pas été modifié !</div>
            {% endif %}
            
            <h1 class=" border-bottom border-white m-5 p-3">Modification d'article</h1>
        </div>
    </div>

    {# Form to update a article #}
    <form action="" method="post" enctype="multipart/form-data">
        <div class="form-row">
            <div class="form-group col mb-3">
                <label for="title">Titre de l'article : </label>
                <input type="text" class="form-control" name="title" value="{{ article.title }}" required>
            </div>

            <div class="form-group col mb-3">
                <label for="chapo">Châpo : </label>
                <input type="text" class="form-control" name="chapo" value="{{ article.chapo }}">
            </div>
        </div>

        <div class="row">
            <div class="form-group mb-3">
                <label for="content">Contenu : </label>
                <textarea class="form-control" name="content" id="content" cols="30" rows="10">{{ article.content }}</textarea>
            </div>

            <div class="form-group mb-3">
                <label for="image">Image : </label>
                <input type="file" class="form-control-file" name="image">
            </div>

            <div class="row no-guters mb-3">
                <input type="submit" value="Valider" class="btn btn-primary col">
            </div>
        </div>
    </form>
{% endblock %}
